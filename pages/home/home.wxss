/* pages/home/home.wxss */

page {
  background-color: white;
}

.contentView {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 0px;
  width: 100%;
  z-index: 800;
}

.search-input-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 35px;
  align-items: center;
  background-color: white;
}

.search-input {
  display: flex;
  flex-direction: row;
  margin-left: 15px;
  width: calc(100% - 30px);
  height: 100%;
  align-items: center;
  background-color: #f5f5f5;
}

.search-icon {
  margin-left: 5px;
  width: 30rpx;
  height: 30rpx;
}

.inputSearch {
  margin-left: 5px;
  height: 20px;
  font-size: 14px;
  width: calc(100% - 25px);
  color: #999;
}

.cartIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(20% - 15px);
  height: 35px;
}

.cartIconImg {
  display: flex;
  width: 22px;
  height: 22px;
}

.classMenuView {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 50px;
  background-color: white;
}

.scroll-view-x {
  width: calc(100% - 50px);
  height: 40px;
}

.hengxiangul {
  width: 100%;
  height: 100%;
  display: flex;
  white-space: nowrap;
}

.hengxiangul li {
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0 20px;
}

.liText {
  line-height: 37px;
  font-size: 16px;
}

.liBottomLine {
  width: 100%;
  height: 3px;
  background-color: #222;
}

.openView {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 100%;
}

.openMenuImage {
  width: 16px;
  height: 9px;
}

.templateContentView {
  position: relative;
  left: 0px;
  width: 100%;
}

.templateSessionView {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-bottom: 10px;
}

.templateMainTitle {
  font-size: 24px;
  text-align: center;
  margin-top: 10px;
  width: 100%;
}

.templateSubTitle {
  font-size: 14px;
  text-align: center;
  margin-top: 5px;
  width: 100%;
  color: #999;
}

.templateGoodsView {
  width: 100%;
}

.productListView {
  position: relative;
  left: 0px;
  width: 100%;
}

.templateProductView {
  display: inline-block;
  width: 100%;
}

.productView {
  display: inline-block;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  /* width: 50%; */
}

.productSingleView {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 10px;
}

.productImage {
  margin-left: 10%;
  width: 80%;
  height: 112px;
}

.productSingleImage {
  width: 60%;
  height: 128px;
}

.productInfoView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.productSingleInfoView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 40%;
}

.productText {
  width: 80%;
  font-size: 14px;
  color: gray;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.priceText {
  margin-top: 10px;
  font-size: 17px;
  font-weight: 900;
  text-align: center;
}

.classContentView {
  position: fixed;
  width: 100%;
  top: 35px;
  z-index: 1000;
  background-color: white;
  /* box-shadow: 0px 5px 5px #e6e6e6; */
}

.classListView {
  margin-top: 10px;
  margin-left: 10px;
  width: 100%;
}

.classItem {
  display: inline-block;
   margin-left: 5px;
   margin-right: 10px;
   margin-bottom: 10px;
  padding-left: 8px;
  padding-right: 8px;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  text-align: center;
}

.closeCoverView {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 40px;
}

.closeCoverImage {
  width: 43px;
  height: 17px;
}

.bottomCoverMenuView {
  display: flex;
  position: fixed;
  align-items: center;
  left: 10px;
  bottom: 10px;
  height: 42px;
  z-index: 888;
  background-color: #000000;
  opacity: 0.5;
  border-radius: 3px;
}

.personMenu{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 100%;
}

.personMenuImage {
  width: 24px;
  height: 26px;
}

.lineMenuImage{
  width: 1px;
  height: 29px;
}

.show {
  display: block;
}

.hide {
  display: none;
}
