/* pages/home/home.wxss */

page {
  background-color: white;
}

.contentView {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 0px;
  width: 100%;
}

.search-input-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 35px;
  align-items: center;
  background-color: white;
}

.search-input {
  display: flex;
  flex-direction: row;
  margin-left: 15px;
  width: 80%;
  height: 100%;
  align-items: center;
  background-color: #f5f5f5;
}

.search-icon {
  margin-left: 5px;
  width: 30rpx;
  height: 30rpx;
}

.inputSearch {
  margin-left: 5px;
  height: 20px;
  font-size: 13px;
  width: calc(100% - 25px);
  color: #999;
}

.cartIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: calc(20% - 15px);
  height: 35px;
}

.cartIconImg {
  display: flex;
  width: 22px;
  height: 22px;
}

.classMenuView {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 50px;
}

.scroll-view-x {
  width: calc(100% - 50px);
  height: 40px;
}

.hengxiangul {
  width: 100%;
  height: 100%;
  display: flex;
  white-space: nowrap;
}

.hengxiangul li {
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0 15px;
}

.liText {
  line-height: 37px;
  color: #999;
  font-size: 14px;
}

.liBottomLine {
  width: 100%;
  height: 3px;
  background-color: #222;
}

.openView {
  display: flex;
  justify-content: center;
  width: 50px;
  height: 100%;
}

.openMenuImage {
  margin-top: 20px;
  width: 16px;
  height: 9px;
}

.productListView {
  width: 100%;
  height: 100%;
}

.productView {
  display: inline-block;
  flex-direction: column;
  align-items: center;
  width: 50%;
  height: 190px;
  box-sizing: border-box;
}

.productImage {
  margin-left: 10%;
  width: 80%;
  height: 112px;
}

.productInfoView {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0px;
  width: 100%;
  height: 120rpx;
}

.productText {
  width: 80%;
  font-size: 12px;
  color: gray;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.priceText {
  margin-top: 10px;
  font-size: 14px;
  font-weight: 900;
  line-height: 40rpx;
}

.classContentView {
  position: fixed;
  width: 100%;
  top: 35px;
  z-index: 1000;
  background-color: white;
  box-shadow: 0px 5px 5px #e6e6e6;
}

.classListView {
  margin-top: 20px;
  margin-left: 10px;
  width: 100%;
}

.classItem {
  display: inline-block;
  margin: 5px;
  padding-left: 8px;
  padding-right: 8px;
  height: 30px;
  line-height: 30px;
  border: 1px solid #e6e6e6;
  font-size: 14px;
  color: #999;
  text-align: center;
}

.closeCoverView {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 40px;
}

.closeCoverImage {
  width: 43px;
  height: 17px;
}

.show {
  display: block;
}

.hide {
  display: none;
}
