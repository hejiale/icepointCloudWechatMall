<view class="page">
  <image src='{{templateObject.mainPic[0]}}' style='width: 100%;'></image>
  <scroll-view scroll-y="true" class="productListView">
    <block wx:for-items="{{templateObject.productBeans}}">
      <view class="productView" style='{{templateObject.layout == "2" ? "width: 50%;":"width: 100%;"}}' bindtap='onGoodsDetail' data-key='{{item}}'>
        <image src="{{item.picture}}" class="productImage" mode="aspectFit" bindtap="onProductDetail" data-key="{{item}}"></image>
        <view class="productInfoView">
          <text class="productText">{{item.goodsName}}</text>
          <text class="priceText">ï¿¥{{item.price}}</text>
        </view>
      </view>
    </block>
  </scroll-view>
</view>