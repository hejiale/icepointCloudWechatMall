page {
  background-color: #f5f5f5;
} 

.productListView {
  width: calc(100% - 5px);
}

.productContentView {
  display: inline-block;
  flex-direction: column;
  align-items: center;
  padding-left: 5px;
  width: 50%;
  /* height: 240px; */
  box-sizing: border-box;
}

.productView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: calc(100% - 5px);
  background-color: white;
}

.productSingleView{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  background-color: white;
  padding-top: 20px;
  padding-bottom: 20px;
}

.productImage {
  margin-top: 30px;
  width: 80%;
}

.productSingleImage{
  width: 50%;
  height: 128px;
}

.productInfoView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 10px;
  padding-bottom: 30px;
}

.productSingleInfoView{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 50%;
}

.productText {
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  margin-top: 10px;
  width: 100%;
}

.productSingleText{
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
  margin-top: 10px;
  width: 85%;
}

.priceText {
  margin-top: 5px;
  font-size: 17px;
  font-weight: 800;
}

.priceSingleText {
  margin-top: 5px;
  font-size: 17px;
  font-weight: 800;
  text-align: right;
  width: 85%;
}

.show {
  display: block;
}

.hide {
  display: none;
}
