page {
  background-color: #fbf9fe;
}


.productListView {
  position: absolute;
  top: 50px;
  width: 100%;
  height: calc(100% - 50px);
}

.productView {
  display: inline-block;
  flex-direction: column;
  width: 50%;
  height: 380rpx;
  background-color: white;
}

.productImage {
  margin: 0px;
  width: 100%;
  height: 260rpx;
}

.productInfoView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0px;
  width: 100%;
  height: 120rpx;
}

.productText {
  width: 80%;
  font-size: 12px;
  color: gray;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.priceText {
  margin-top: 20px;
  font-size: 14px;
  font-family: "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Hiragino Sans GB",
                 "PingFang SC",
                 "Microsoft YaHei",
                 "WenQuanYi Micro Hei",
                 sans-serif;
  font-weight: 900;
  line-height: 40rpx;
}

.show {
  display: block;
}

.hide {
  display: none;
}
