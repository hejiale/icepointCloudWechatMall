.storeAddressView{
  display: flex;
  margin-top: 0px;
  width: 100%;
  height: 50px;
}

.contentText {
  margin-left: 10px;
  margin-top: 0px;
  font-size: 12px;
  width: 80%;
  line-height: 25px;
  color: gray;
}
.addressText{
  margin-top: 0px;
  margin-left: 10px;
  font-size: 16px;
  width: 70%;
  line-height: 20px;
}

.addressImage{
  width: 20px;
  height: 20px;
}

.distanceText{
  margin-left: 5px;
  font-size: 14px;
  line-height: 25px;
}

.storeContacterLine {
  margin-left: 1px;
  width: 1px;
  height: 70%;
}

.callPhoneView {
  display: flex;
  justify-content: center;
  margin-left: 1px;
  width: calc(30% - 13px);
  height: 100%;
}

.callImage {
  width: 32px;
  height: 32px;
}

.show {
  display: block;
}

.hide {
  display: none;
}
