/* pages/bindPhone/bindPhone.wxss */

page {
  background-color: #fbf9fe;
  height: 100%;
}

.contentView {
  position: fixed;
  display: flex;
  flex-direction: column;
  top: 0px;
  width: 100%;
  height: 100%;
}

.topView {
  position: relative;
  margin-left: 10px;
  margin-top: 10px;
  margin-right: 10px;
  height: 147px;
}

.top_bg_image {
  width: 100%;
  height: 100%;
}

.personInfoContentView {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0px;
  left: 10px;
  width: calc(100% - 20px);
  height: 100%;
}

.personInfoView {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 80%;
}

.personBottomView {
  display: flex;
  margin-left: 60%;
  align-items: center;
  width: calc(40% - 10px);
  height: 20%;
}

.showMemberRightsText {
  width: 100%;
  color: white;
  font-size: 13px;
  text-align: right;
}

.headBorderView {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20px;
  width: 70px;
  height: 70px;
  border: 1px solid #e8e8e8;
  border-radius: 35px;
}

.photo {
  width: 62px;
  height: 62px;
  border-radius: 31px;
}

.userInfoView {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  height: 60px;
}

.userNameText {
  height: 50%;
  line-height: 30px;
  font-size: 20px;
  color: white;
}

.tipText {
  height: 50%;
  line-height: 30px;
  font-size: 15px;
  color: white;
}

.inputView {
  display: flex;
  flex-direction: column;
  margin: 10px;
  height: calc(100% - 177px);
  background-color: white;
}

.inputTitle {
  margin-top: 20px;
  margin-left: 20px;
  margin-right: 10px;
  height: 20px;
  font-size: 13px;
  color: #555;
  line-height: 20px;
}

.userNameView {
  display: flex;
  align-items: center;
  margin-top: 20px;
  margin-left: 20px;
  height: 50px;
}

.passwordView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20px;
  margin-top: 1px;
  height: 50px;
}

.inputLine {
  margin-left: 20px;
  width: calc(100% - 40px);
  height: 1px;
  background-color: #e8e8e8;
}

.inputTextView {
  display: flex;
  align-items: center;
  width: 60%;
  height: 100%;
}

.inputText {
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 16px;
}

.passwordSpaceLine {
  margin-left: 1px;
  width: 1px;
  height: 50%;
}

.codeButton {
  display: flex;
  align-items: center;
  width: calc(40% - 1px);
  height: 100%;
}

.codeText {
  width: 100%;
  font-size: 15px;
  text-align: center;
}

.bindView {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px;
  width: calc(100% - 40px);
  height: 34px;
  border-radius: 3px;
  font-size: 15px;
  text-align: center;
}

.showMemberRightMemoView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  z-index: 888;
}

#classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}

.showMemberRightMemoBgView {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 10%;
  top: calc(50% - 130px);
  width: 80%;
  height: 220px;
  background-color: white;
  border-radius: 8px;
}

.memberRightsTitle {
  margin-top: 20px;
  width: 100%;
  font-size: 16px;
  text-align: center;
}

.memberRightsText {
  margin-top: 20px;
  width: 100%;
  font-size: 15px;
  text-align: center;
  color: #999;
}

.closeMemberRightsText {
  margin-top: 10px;
  width: 100%;
  height: 34px;
  line-height: 34px;
  font-size: 15px;
  text-align: center;
  color: #3da7f6;
}

.infoAlertView {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background-color: white;
}

.infoContentTitle{
  width: 100%;
  font-size: 16px;
  font-weight: 500;
  text-align: center;
  padding-top: 15px;
  padding-bottom: 15px;
}

.infoLineImage{
  width: 90%;
  height: 1px;
}

.companyImage{
  padding-top: 20px;
  padding-bottom: 30px;
  width: 80px;
  height: 80px;
}

.infoContentMainTitle{
  width: 70%;
  font-size: 14px;
  font-weight: 500;
  padding-top: 30px;
}

.infoContentSubTitle{
  width: 70%;
  font-size: 12px;
  padding-top: 10px;
  padding-bottom: 20px;
  color: #999999;
}

.infoSureButton{
  margin-top: 20px;
  width: 80%;
  height: 36px;
  font-size: 15px;
  background-color: #4D9FD8;
  line-height: 36px;
  color: white;
}

/* .infoSureButton::after{
  border: none; 
} */

.show {
  display: block;
}

.hide {
  display: none;
}
