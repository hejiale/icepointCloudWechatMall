/* pages/productDetail/productDetail.wxss */

page {
  background-color: #fbf9fe;
}

.tryGlassView {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0px;
  width: 70px;
  height: 70px;
  z-index: 700;
}

.tryGlassImage {
  width: 59px;
  height: 59px;
}

.contentView {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.swiper_box {
  width: 100%;
  background-color: white;
}

.bannerView {
  width: 100%;
  height: 280rpx;
}

.bannerImage {
  width: 100%;
  height: 100%;
}

.productInfo {
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}

.productName {
  margin-top: 10px;
  margin-left: 20px;
  width: calc(100% - 25px);
  font-size: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

.priceText {
  margin-top: 10px;
  margin-left: 20px;
  font-size: 18px;
  color: #f2426f;
  font-weight: 500;
}

.specificationView {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin-top: 5px;
}

.specificationTitleView {
  display: flex;
  align-items: center;
  width: 100%;
  height: 60px;
}

.specificationDetailText {
  margin-left: 20px;
  width: calc(50% - 30px);
  font-size: 18px;
  text-align: center;
}

.columnLine {
  width: 1px;
  height: 20px;
}

.specificationParameterText {
  width: calc(50% - 30px);
  font-size: 18px;
  text-align: center;
}

.lineImage {
  width: calc(100% - 20px);
  height: 1px;
}

.specifications {
  width: 100%;
  height: 100%;
}

.FrameView {
  width: 100%;
}

.specificationItem {
  display: flex;
  align-items: center;
  width: 100%;
  height: 50px;
}

.keyText {
  margin-top: 5px;
  margin-left: 20px;
  font-size: 15px;
  color: #999;
}

.valueText {
  margin-top: 5px;
  margin-left: 30px;
  font-size: 15px;
  color: #333;
}

.webView {
  margin-top: 5px;
  width: 100%;
  background-color: white;
}

.footView {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 50px;
  background-color: white;
}

.cartButton {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  width: calc(40% - 30px);
  height: 100%;
}

.cartImage {
  flex: 1;
  width: 32px;
  height: 22px;
}

.phoneImage {
  flex: 1;
  width: 32px;
  height: 22px;
  border-right: 1px solid #dcdcdc;
}

.addCartButton {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 30%;
  height: 36px;
  border: 1px solid #63a0d4;
  border-radius: 3px;
}

.payOrderButton {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 30%;
  height: 36px;
  background-color: #63a0d4;
  border-radius: 3px;
}

.bookText {
  font-size: 14px;
  color: white;
}

.addCartText {
  font-size: 14px;
  color: #63a0d4;
  text-align: center;
}

.tryImage {
  width: 40px;
  height: 40px;
}

.parameterMainView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  z-index: 1000;
}

#classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}

.parameterContentView {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  left: 0px;
  bottom: 0px;
  width: 100%;
  background-color: white;
}

.parameterInfoView {
  display: flex;
  align-items: center;
  width: 100%;
}

.parameterImage {
  margin-left: 20px;
  width: 30%;
  height: 80px;
}

.parameterRightView {
  display: flex;
  flex-direction: column;
  width: calc(70% - 20px);
}

.specificationsView {
  display: flex;
  flex-direction: column;
  width: calc(100% - 20px);
}

.classItem {
  display: inline-block;
  margin-top: 5px;
  margin-left: 5px;
  width: calc((100% - 20px)/4);
  height: 30px;
  border-radius: 5px;
}

.classItemText {
  display: inline-block;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  line-height: 30px;
}

.popPropertyView {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  width: 100%;
}

.popPropertyTitleView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.TitleText {
  margin-left: 5px;
  line-height: 20px;
  font-size: 12px;
  color: #111;
}

.parameterNumView {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: calc(100% - 20px);
  height: 50px;
}

.parameterNumTitle {
  font-size: 14px;
  text-align: center;
}

.editCartNumView {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 30px;
}

.reduceCartImage {
  width: 46px;
  height: 26px;
}

.cartNumText {
  width: 30px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  font-size: 14px;
}

.parameterFootView {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  width: calc(100% - 20px);
  height: 36px;
  background-color: #63a0d4;
  border-radius: 3px;
}

.parameterFootText {
  font-size: 14px;
  color: white;
  text-align: center;
}

.show {
  display: block;
}

.hide {
  display: none;
}
