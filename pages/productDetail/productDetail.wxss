/* pages/productDetail/productDetail.wxss */

page {
  background-color: #fbf9fe;
}

.tryGlassView {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0px;
  width: 70px;
  height: 70px;
}

.tryGlassImage {
  width: 59px;
  height: 59px;
}

.contentView {
  padding-bottom: 50px;
}

.swiper_box {
  width: 100%;
  background-color: white;
}

.bannerView {
  width: 100%;
  height: 280rpx;
}

.bannerImage {
  width: 100%;
  height: 100%;
}

.productInfo {
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}

.productName {
  margin-top: 20px;
  margin-left: 20px;
  width: calc(100% - 25px);
  font-size: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

.priceText {
  margin-top: 10px;
  margin-left: 20px;
  font-size: 18px;
  color: #f2426f;
  font-weight: 500;
  height: 50px;
  line-height: 30px;
}

.specificationView {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin-top: 5px;
  margin-bottom: 5px;
}

.specificationTitleView {
  display: flex;
  align-items: center;
  width: 100%;
  height: 60px;
}

.specificationDetailText {
  margin-left: 20px;
  width: calc(50% - 30px);
  font-size: 18px;
  text-align: center;
}

.columnLine {
  width: 1px;
  height: 20px;
}

.specificationParameterText {
  width: calc(50% - 30px);
  font-size: 18px;
  text-align: center;
}

.lineImage {
  margin-left: 10px;
  width: calc(100% - 20px);
  height: 1px;
}

.specifications {
  width: 100%;
}

.FrameView {
  margin-top: 20px;
  width: 100%;
}

.specificationItem {
  display: flex;
  align-items: center;
  width: 100%;
  height: 50px;
}

.keyText {
  margin-top:5px;
  margin-left: 20px;
  font-size: 15px;
  color: #999999;
}

.valueText {
  margin-top:5px;
  margin-left: 30px;
  font-size: 15px;
  color: #333333;
}

.webView {
  margin-top: 5px;
  width: 100%;
  background-color: white;
}

.footView {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 50px;
  background-color: white;
}

.cartButton {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  width: calc(40% - 30px);
  height: 100%;
}

.cartImage {
  flex: 1;
  width: 32px;
  height: 22px;
}

.phoneImage {
  flex: 1;
  width: 32px;
  height: 22px;
  border-right: 1px solid #dcdcdc;
}

.addCartButton {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 30%;
  height: 36px;
  border: 1px solid #63a0d4;
  border-radius: 3px;
}

.payOrderButton {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 30%;
  height: 36px;
  background-color: #63a0d4;
  border-radius: 3px;
}

.bookText {
  font-size: 14px;
  color: white;
}

.addCartText {
  font-size: 14px;
  color: #63a0d4;
  text-align: center;
}

.tryImage {
  width: 40px;
  height: 40px;
}
