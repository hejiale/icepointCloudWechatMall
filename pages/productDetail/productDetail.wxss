/* pages/productDetail/productDetail.wxss */

page {
  background-color: #fbf9fe;
}

.tryGlassView{
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 5px;
  right: 0px;
  width: 70px;
  height: 70px;
  z-index: 1000;
}

.tryGlassImage{
  width: 59px;
  height: 59px;
}

.contentView {
  padding-bottom: 50px;
}

.swiper_box {
  width: 100%;
  background-color: white;
}

.bannerView {
  width: 100%;
  height: 280rpx;
}

.bannerImage {
  width: 100%;
  height: 100%;
}

.productInfo {
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}

.productName {
  margin-top: 20px;
  margin-left: 20px;
  width: calc(100% - 30px);
  height: 50px;
  font-size: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 900;
}

.priceText {
  margin-top: 10px;
  margin-left: 20px;
  font-size: 18px;
  color: #f2426f;
  font-family: "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Hiragino Sans GB",
                 "PingFang SC",
                 "Microsoft YaHei",
                 "WenQuanYi Micro Hei",
                 sans-serif;
  font-weight: 900;
  height: 50px;
  line-height: 30px;
}

.specificationView {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 280px;
  background-color: white;
  margin-top: 5px;
  margin-bottom: 5px;
}

.specificationTitleView{
  display: flex;
  align-items: center;
  width: 100%;
  height: 60px;
}

.specificationDetailText{
  margin-left: 20px;
  width: calc(50% - 30px);
  font-size: 18px;
  text-align: center;
  color: #999999;
}

.columnLine{
  width: 1px;
  height: 20px;
}

.specificationParameterText{
  width: calc(50% - 30px);
  font-size: 18px;
  text-align: center;
}

.lineImage{
  margin-left: 10px;
  width: calc(100% - 20px);
  height: 1px;
}

/* .specificationImage {
  width: 100%;
  height: 140px;
} */

.specifications {
  margin: 0px;
  width: 100%;
  height: 140px;
}

.FrameView {
  margin: 0px;
  width: 100%;
  height: 100%;
}

.specificationItem {
  display: inline-block;
  width: 100%;
  height: 25px;
}

.keyText {
  margin-left: 20px;
  font-size: 16px;
  width: 20%;
  line-height: 25px;
}

.valueText {
  margin-left: 10px;
  font-size: 16px;
  width: 80%;
  color: lightgrey;
  line-height: 25px;
}

.webView {
  margin-top: 5px;
  width: 100%;
  background-color: white;
}

.footView {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 50px;
  background-color: #fbf9fe;
}

.glassTryView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20%;
  height: 100%;
  background-color: white;
}

.rightTryFootView {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  background-color: white;
}

.cartButton {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.cartImage {
  flex: 1;
  width: 22px;
  height: 22px;
}

.phoneImage {
  flex: 1;
  width: 22px;
  height: 22px;
  border-right: 1px solid #dcdcdc;
}

.addCartButton {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 108px;
  height: 100%;
}

.addCartImage {
  width: 108px;
  height: 36px;
}

.payOrderButton {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  margin-right: 10px;
  width: 108px;
  height: 100%;
}

.payOrderImage {
  width: 108px;
  height: 36px;
}

.bookText {
  font-size: 14px;
  width: 50%;
  height: 100%;
  line-height: 50px;
  text-align: center;
  background-color: #63a0d4;
}

.addCartText {
  font-size: 14px;
  color: white;
  width: 50%;
  height: 100%;
  line-height: 50px;
  text-align: center;
  background-color: #ffd700;
}

.tryImage {
  width: 40px;
  height: 40px;
}
