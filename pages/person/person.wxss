/* pages/person/person.wxss */

page {
  background-color: white;
}

.loginView {
  display: flex;
  flex-direction: column;
  margin-top: 200px;
  width: 100%;
}

.textView {
  display: flex;
  align-content: center;
  height: 50px;
  width: 100%;
}

.personView {
  width: 100%;
  height: 100%;
}

.topCoverView {
  width: 100%;
  height: 5px;
  background-color: #f5f5f5;
}

.headView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.headBgImage {
  width: 100%;
  height: 100%;
}

.photo_wrap {
  display: flex;
  align-items: center;
  margin-top: 20px;
  width: 100%;
  height: 60px;
}

.photo {
  margin-left: 10px;
  width: 58px;
  height: 58px;
}

.personInfoView {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  margin-top: 10px;
  width: calc(100% - 148px);
  height: 100%;
}

.userName {
  margin-top: 0px;
  font-size: 16px;
  height: 30px;
  line-height: 30px;
}

.memberCardNum {
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}

.scanCodeView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 100%;
}

.scanCodeImage {
  width: 25px;
  height: 25px;
}

.headLine {
  margin-top: 20px;
  width: 95%;
  height: 1px;
  background-color: #f8f8f8;
}

.memberInfoView {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  width: 100%;
  height: 60px;
}

.memberLevelView {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  height: 100%;
}

.memberPointView {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  height: 100%;
}

.memberBalanceView {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  height: 100%;
}

.memberInfoValue{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 18px;
  text-align: center;
}

.memberInfoTitle{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #999999;
  text-align: center;
}

.listView {
  margin-top: 0px;
  background-color: white;
}

.listLine{
  margin-left: 10px;
  width: 95%;
  height: 1px;
  background-color: #F5F5F5;
}

.show {
  display: block;
}

.hide {
  display: none;
}

